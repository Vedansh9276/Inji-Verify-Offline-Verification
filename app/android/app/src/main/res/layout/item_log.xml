<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_xs"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/card_radius_small"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_sm"
        android:gravity="center_vertical">

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/log_status_icon"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:src="@drawable/ic_checkmark"
            android:contentDescription="@string/cd_checkmark" />

        <!-- Log Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/log_hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc123..."
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/text_primary"
                tools:text="abc123def456..." />

            <TextView
                android:id="@+id/log_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 minutes ago"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/text_secondary"
                tools:text="2 minutes ago" />

        </LinearLayout>

        <!-- Sync Status -->
        <ImageView
            android:id="@+id/log_sync_icon"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:layout_marginStart="@dimen/spacing_sm"
            android:src="@drawable/ic_sync_done"
            android:contentDescription="@string/logs_synced"
            android:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
